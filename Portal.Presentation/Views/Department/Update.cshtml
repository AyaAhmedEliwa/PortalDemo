@model DepartmentVM

@{
    ViewData["Title"] = "Update";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Department</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Department Card</a></li>
                    <li class="breadcrumb-item active">Update</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <a asp-controller="Department" asp-action="index" class="btn btn-success">Return</a>
        <br /><br />

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Update @Model.Name Department</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-controller="Department" asp-action="Update" method="post">
                        @*<div asp-validation-summary="All" class="text-danger font-weight-bold"></div>*@
                        @*this show all validation*@
                        <input type="hidden" asp-for="Id"/>

                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Name">Department Name</label>
                                <input type="text" asp-for="Name" class="form-control" placeholder="Enter Department Name">
                                <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Code">Department Code</label>
                                <input type="text" asp-for="Code" class="form-control" placeholder="Enter Department Code">
                                <span asp-validation-for="Code" class="text-danger font-weight-bold"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <center>
                                <input type="submit" value="Update" class="btn btn-primary" />
                                <a asp-controller="Department" asp-action="index" class="btn btn-success">Cancle</a>
                                @*<input type="reset" value="Cancle" class="btn btn-success" />*@
                            </center>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div><!-- /.container-fluid -->
    </div>
</section>
<!-- /.content -->
@section JqueryValidation{
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}